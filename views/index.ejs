<html>
  <head>
    <title>My Craft Beer Cellar App!</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
  </head>
  <body ng-app="myCraftBeerCellar">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
       <ui-view></ui-view>
      </div>
     </div>

      <script type="text/ng-template" id="/home.html">
      

      <div>
       <img src="/images/beer-cellar-logo-resized.jpg" alt="The Beer Cellar" style="float:left;"/>
       <form ng-submit="addCraftBeer()" style="margin-top:30px;">
	<h3>Add Beer to Cellar</h3>
	<div class="form-group">
  	<input type="text" placeholder="Craft Beer Name" ng-model="name"></input>
	</div>
	<div class="form-group">
	<input type="text" placeholder="Craft Beer Brewery" ng-model="brewery"></input>
	</div>
	<div class="form-group">
	<input type="text" placeholder="Craft Beer Year" ng-model="year"></input>
	</div>
	<div class="form-group">
	<input type="text" placeholder="Craft Beer Type" ng-model="type"></input>
	</div>
	<div class="form-group">
	<input type="text" placeholder="Craft Beer Notes" ng-model="notes"></input>
	</div>
	<div class="form-group">
	<input type="text" placeholder="Craft Beer Alcohol Content" ng-model="abv"></input>
	</div>
	<div class="form-group">
	<input type="text" placeholder="# to Add" ng-model="inventory"></input>
	</div>
	<div class="form-group">
	<input type="text" placeholder="BeerAdvocate Link" ng-model="beeradvocate"></input>
	</div>
  	<button type="submit" class="btn btn-primary">Add Beer to Cellar</button>
      </form>
      </div>
      <div>
       <table class="table table-hover">
    	<tr>
         <th>Name</th>
         <th>Brewery</th>
         <th>Year</th>
         <th>Type</th>
	 <th>Notes</th>
	 <th>ABV</th>
	 <th>Inventory</th>
	 <th>BeerAdvocate</th>
        </tr>
        <tr ng-repeat="craftbeer in craftBeers | orderBy:'-year'">
	 <td><span><a href="#/craftbeers/{{craftbeer._id}}">{{craftbeer.name}}</a></span></td>
         <td>{{craftbeer.brewery}}</td>
         <td>{{craftbeer.year}}</td>
         <td>{{craftbeer.type}}</td>
         <td>{{craftbeer.notes}}</td>
         <td>{{craftbeer.abv}}</td>
         <td>{{craftbeer.inventory}}</td>
         <td><a href="{{craftbeer.beeradvocate}}">{{craftbeer.name}} on BeerAdvocate</a></td>
        </tr>
       </table>
      </div>

      
   </div>
  </script>

<script type="text/ng-template" id="/craftbeers.html">
  <div class="page-header">
    <h3>
        {{craftBeer.name}}
    </h3>
  </div>

  <div ng-repeat="comment in craftBeer.comments">
    By {{comment.author}}
    <span style="font-size:20px; margin-left:10px;">
      {{comment.body}}
    </span>
  </div>

  <form ng-submit="addComment()"
    style="margin-top:30px;">
    <h3>Add a new comment</h3>

    <div class="form-group">
      <input type="text" class="form-control" placeholder="Tastey?" ng-model="body"></input>
    </div>
    <button type="submit" class="btn btn-primary">Add Comment</button>
  </form>
</script>

  </body>
</html>